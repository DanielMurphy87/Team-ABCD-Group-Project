{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "vite/client": ["vite/client"],
      "pages/*": ["src/pages/*"],
      "components/*": ["src/components/*"],
      "hooks/*": ["src/hooks/*"],
      "assets/*": ["src/assets/*"],
      "utils/*": ["src/utils/*"],
      "styles/*": ["src/styles/*"],
      "navigation/*": ["src/navigation/*"],
      "definations/*": ["src/definations/*"],
      "config/*": ["src/config/*"],
      "layouts/*": ["src/layouts/*"]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [".eslintrc.cjs", "src", "vite.config.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "public",
    "scripts",
    "coverage",
    "README.md"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
